@inherits Microsoft.VisualStudio.Web.CodeGeneration.Templating.RazorTemplateBase
using System;
using System.Collections.Generic;
using System.Text;
using FluentValidation;
using @(Model.Namespace).Application.Command;

namespace @(Model.Namespace).Application.Validation
{
    public class @(Model.CommandClassName)CommandValidation : AbstractValidator<@(Model.CommandClassName)Command>
    {
        public @(Model.CommandClassName)CommandValidation()
        {
            RuleFor(command => command.Name).NotEmpty().WithMessage("\"Name\" field should'nt be empty.");
        }
    }
}
